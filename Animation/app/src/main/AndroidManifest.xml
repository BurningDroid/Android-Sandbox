<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.youknow.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".animations.SnowingActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".animations.ColorActivity" />
        <activity android:name=".animations.FadeActivity" />
        <activity android:name=".animations.ScaleActivity" />
        <activity android:name=".animations.TranslateActivity" />
        <activity android:name=".animations.RotateActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>